{% extends "base.html.twig" %}

{% block title %}Forum - Modification de la recette
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification de la recette</h1>

		<form name="forum" method="post" enctype="multipart/form-data">

			<div class="form-group">
				{{ form_label(form.title) }}
				{{ form_widget(form.title) }}
				<div class="form-error">
					{{ form_errors(form.title) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description) }}
				<div class="form-error">
					{{ form_errors(form.description) }}
				</div>
			</div>


			<div class="form-check mt-4">
				{{ form_widget(form.isFavorite) }}
				{{ form_label(form.isFavorite) }}
			</div>

			{# {{ form_row(form.) }} #}

			{{ form_row(form._token) }}

			<button type="submit" id="forum_submit" name="forum[submit]" class="btn btn-primary mt-4">Modifier le forum</button>

		</form>
	</div>
{% endblock %}